global:
  env:
    - LARAVEL_ENV: pagoda
web1:
  name: l4-web
  shared_writable_dirs:
    - app/storage/cache
    - app/storage/logs
    - app/storage/meta
    - app/storage/sessions
    - app/storage/views
  document_root: public
  php_display_errors: "0"
  php_extensions:
    - apc
    - bcmath
    - mcrypt
    - memcached
    - pdo_mysql
    - bz2
    - curl
    - rar
    - zip
  after_build:
    - "if [ ! -f composer.phar ]; then curl -s http://getcomposer.org/installer | php; fi; php composer.phar install"
  before_deploy:
    - "php artisan migrate"
  after_deploy:
    - "rm -f app/storage/cache/*"
    - "rm -f app/storage/views/*"
db1:
  name: l4-db
  type: mysql